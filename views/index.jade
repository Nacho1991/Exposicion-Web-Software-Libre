extends layout

block content
		form(action="/user/dashboard" method="post")#loginform.form-horizontal
			div(class="container")
				div(id="loginbox",style="margin-top:50px;",class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2")
					div(class="panel panel-info")
						div(class="panel-heading")
							div(class="panel-title")|Iniciar sesión
						div(class="panel-body")
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-user")
								input(placeholder="Dígite su nombre usuario", type="text", name="nombreusuario", id='nombreusuario').form-control
							br
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-lock")
								input(placeholder="Dígite su contraseña", type="password", name="contrasenna", id='contrasenna').form-control
						div(class="panel-footer")
							center
								button(class="btn btn-success",type="submit")
									span(aria-hidden="true" class="glyphicon glyphicon-log-in")|   Entrar


block scripts
	script(src='/javascripts/bootstrap.min.js')
	script(src='/javascripts/npm.js')
	script(src='/javascripts/bootstrap.js')