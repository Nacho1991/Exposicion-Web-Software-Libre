extends layout

block content
	nav(class="navbar navbar-default")
		div(class="container-fluid")
			div(class="navbar-header")
				a(class="navbar-brand")|Universidad Técnica Nacional
			div(class="collapse navbar-collapse")
				ul(class="nav navbar-nav")
					li(class="active")
						a(href="#")|Dashboard
				ul(class="nav navbar-nav navbar-right")
					li(class="dropdown")
						a(href="#", class="dropdown-toggle", data-toggle="dropdown",role="button", aria-expanded="false")|Nombre de usuario
							span(class="caret")
						ul(class="dropdown-menu")
							li
								a(href="#")|Cerrar sesión

	form( method="post")#loginform.form-horizontal
			div(class="container")
				div(id="loginbox",style="margin-top:50px;",class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2")
					div(class="panel panel-info")
						div(class="panel-heading")
							div(class="panel-title")|Registrar usuario
						div(class="panel-body")
							div(class="input-group")
								label Nombre:
								input(type="text", name="nombre", id='nombre').form-control
							br
							div(class="input-group")
								label(for="apellidos") Apellidos:
								input(type="text", name="apellidos", id='apellidos').form-control
							br
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-user")
								input(placeholder="Dígite su nombre usuario", type="text", name="nombreusuario", id='nombreusuario').form-control
							br
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-lock")
								input(placeholder="Dígite su contraseña", type="password", name="contrasenna", id='contrasenna').form-control
							br
							div(class="input-group")
								span(class="input-group-addon")
									i(class="glyphicon glyphicon-lock")
								input(placeholder="Vuelva a digitar su contraseña", type="password", name="verificarcontrasenna", id='verificarcontrasenna').form-control
						div(class="panel-footer")
							center
								button(class="btn btn-success",type="submit")
									span(aria-hidden="true" class="glyphicon glyphicon-chevron-left")|   Atrás
								|	
								button(class="btn btn-primary",type="button")
									span(aria-hidden="true" class="glyphicon glyphicon-save")|   Registrar

block scripts
	script(src='/javascripts/bootstrap.min.js')
	script(src='/javascripts/npm.js')
	script(src='/javascripts/bootstrap.js')
